---
import ThemeToggler from "./ThemeToggler.astro";
---
<nav>
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/projects">Projects</a></li>
    <li><a href="/resources">Resources</a></li>
    <li><a href="/about">About Me</a></li>
  </ul>
  <ThemeToggler />
</nav>

<script>
  const {pathname} = window.location
  const activeNavelement = document.querySelector(`nav a[href='${pathname}']`)
  if (activeNavelement){
    activeNavelement.classList.add("active")
  }
</script>

<style>
  nav{
    display: flex;
    align-items: flex-start;
    padding: 2rem 0;
  }
  ul{
    display: flex;
    flex-wrap: wrap;
    padding: 0;
    margin: 0 auto 0 0;
  }
  nav li{
    opacity: 0.8;
    list-style: none;
    font-size: .95rem;
  }
  a{
    padding: .5rem 1rem;
    border-radius: 10px;
    text-decoration: none;
  }
  a:hover{
    color: var(--grey-900);
  }
  a.active{
    background: var(--grey-900);
    color: var(--background);
  }
</style>