---
import Main from "../layout/Main.astro"
import Cards from "../components/Cards.astro";

const profileImage = 'photo.png'
const cardsInfo = [
	{
		title: "A summary of my work history",
		to: "/projects",
		gradientFrom: '#fde68a',
		gradientTo: '#fca5a5'
	},
	{
		title: "How to contact me",
		to: "/contact",
		gradientFrom: '#818cf8',
		gradientTo: '#d8b4fe'
	},
	{
		title: "Usefull Resources",
		to: "/resources",
		gradientFrom: '#6ee7b7',
		gradientTo: '#9333ea'
	},
]
---

  <Main title="Samuel Perez | Personal Website" >
		<section class="profile">
			<img src={profileImage} class="profile-img" alt="Profile picture">
			<div class="profile-details">
				<h1>Samuel Perez</h1>
				<h2>FullStack Developer from Cienfuegos, Cuba.</h2>
				<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolore cupiditate, molestiae minima culpa..</p>
				<a class="btn" href="/about">Read More</a>
			</div>
		</section>
		<Cards cards={cardsInfo} />
	</Main>


<style>
	.profile{
		display: flex;
		align-items: flex-start;
		flex-wrap: wrap;
		padding: 1rem 0 3rem 0;
	}
	.profile-details{
		flex: 1 0 300px;
	}
	.profile-details > h1{
		margin-top: 0;
	}
	.profile-img{
		border-radius: 50%;
		margin: 0 2rem 1rem 0;
	}

	a.btn{
		padding: .5rem 1rem;
		background-color: var(--grey-600);
		color: var(--background);
		border: 0;
		border-radius: 30px;
    cursor: pointer;
    transition: all .2s ease-in;
	}
	a.btn:hover{
		background-color:var(--grey-400) ;
		color: var(--grey-900);
	}
</style>

